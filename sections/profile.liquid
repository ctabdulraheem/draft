<div id="my-user_profile">
  <div class="user_profile-image">
    <img
      src=" {{ section.settings.user_image | img_url: '300x300' }} "
      alt=""
      loading="lazy" />
  </div>
  <h3>
    {{ section.settings.user_name }}</h3>
  <p>
    {{ section.settings.user_bio }}</p>
</div>

{% schema %}
  {
    "name": "Profile",
    "settings": [
      {
        "type": "image_picker",
        "id": "user_image",
        "label": "Uset Image"
      }, {
        "type": "text",
        "id": "user_name",
        "label": "User Name"
      }, {
        "type": "richtext",
        "id": "user_bio",
        "label": "Uset Bio"
      }
    ],
    "presets": [
      {
        "name": "User Profile"
      }
    ]
  }
{% endschema %}